@using Cosplane_API_ViewModel.Brand
@model GetAllBrandAPIViewModel
<div class="min-height-200px">
    @* ============================================================================================== *@
    <div class="page-header background-blue ">
        <div class="row">
            <div class="col-md-6 col-sm-12">
                <div class=" light-text">
                    <h4 class="light-text"> Quản Lý Thương Hiệu </h4>
                </div>
                <nav aria-label="breadcrumb" role="navigation">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item ">
                            <a class="light-text" href="/">Trang chủ</a>
                        </li>
                        <li class="breadcrumb-item active light-text" aria-current="page">
                            Cập Nhật Thương Hiệu
                        </li>
                    </ol>
                </nav>
            </div>

        </div>
    </div>
    @* ============================================================================================ *@
    <div class="row">

        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 mb-30">
            <div class="card-box height-100-p overflow-hidden">
                <div class="profile-tab height-100-p">
                    <div class="tab-pane fade show active" id="info" role="tabpanel">
                        <div class="profile-setting">
                            <form asp-action="Update" asp-controller="Brand" method="post">
                                <ul class="profile-edit-list row">

                                    <input type="hidden" asp-for=BrandId></input>
                                    <li class="weight-500 col-md-1"></li>

                                    <li class="weight-500 col-md-10">

                                        <h4 class="text-blue h5 mb-20">
                                            Cập Nhật Thông Tin Thương Hiệu
                                        </h4>

                                        <div class="form-group">
                                            <label>Mã thương hiệu:</label>
                                            <input class="form-control form-control-lg"
                                                   type="text"
                                                   asp-for="@Model.BrandId" disabled/>
                                        </div>

                                        
                                        <div class="form-group">
                                            <label>Tên thương hiệu:</label>
                                            <input class="form-control form-control-lg"
                                                   type="text"
                                                   asp-for="@Model.BrandName" />
                                        </div>

                                        <div class="form-group row">
                                            <div class="col-2"></div>
                                            <button type="submit" class="btn btn-success col-lg-2 col-sm-12 offset-lg-2">Tạo</button>
                                            <a href="/Brand" class="btn btn-primary col-lg-2 col-sm-12 offset-lg-1">Trở về</a>
                                            <div class="col-2"></div>
                                        </div>

                                    </li>
                                    <li class="weight-500 col-md-1"></li>
                                </ul>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<ul class="notification-list"></ul>

@section Scripts {

    @if (ViewBag.Error != null)
    {
        <script>
            $(function () {
                toastr.error('@ViewBag.Error', 'Error Occurred!')
            });
        </script>
    }

    @if (ViewBag.Success != null)
    {
        <script>
            $(function () {
                toastr.success('@ViewBag.Success', 'Successful!')
            });
        </script>
    }
}