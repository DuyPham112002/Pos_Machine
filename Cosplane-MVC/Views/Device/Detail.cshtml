@using Cosplane_API_ViewModel.Device
@model GetDeviceByIdAPIViewModel
<div class="min-height-200px">
    @* ============================================================================================== *@
    <div class="page-header background-blue ">
        <div class="row">
            <div class="col-md-6 col-sm-12">
                <div class=" light-text">
                    <h4 class="light-text"> Quản Lý Thiết Bị </h4>
                </div>
                <nav aria-label="breadcrumb" role="navigation">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item ">
                            <a class="light-text" href="/">Trang chủ</a>
                        </li>
                        <li class="breadcrumb-item active light-text" aria-current="page">
                            Thông Tin Chi Tiết
                        </li>
                    </ol>
                </nav>
            </div>

        </div>
    </div>
    @* ============================================================================================ *@
    <div class="row">

        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 mb-30">
            <div class="card-box height-100-p overflow-hidden">
                <div class="profile-tab height-100-p">
                    <div class="tab-pane fade show active" id="info" role="tabpanel">
                        <div class="profile-setting">
                            <ul class="profile-edit-list row">

                                <li class="weight-500 col-md-1"></li>

                                <li class="weight-500 col-md-10">

                                    <h4 class="text-blue h5 mb-20">
                                        Thông Tin Chi Tiết Về Thiết Bị
                                    </h4>

                                    <div class="form-group">
                                        <label>Mã thiết bị:</label>
                                        <input class="form-control form-control-lg"
                                               type="text"
                                               asp-for="@Model.DeviceId" disabled />
                                    </div>

                                    <div class="form-group">
                                        <label>Fingerprint của Thiết bị:</label>
                                        <input class="form-control form-control-lg"
                                               type="text"
                                               asp-for="@Model.DeviceFingerprint" />
                                    </div>

                                    <div class="form-group">
                                        <label>Trạng thái hiện tại của thiết bị:</label>
                                        <input class="form-control form-control-lg"
                                               type="text"
                                               value="@(Model.IsDeviceActive ? "Đang kích hoạt" : "Không kích hoạt")" />
                                    </div>

                                    <div class="form-group">
                                        <label>Mã thương hiệu:</label>
                                        <input class="form-control form-control-lg"
                                               type="text"
                                               asp-for="@Model.BrandId" />
                                    </div>
                                    
                                    <div class="form-group">
                                        <label>Tên thương hiệu:</label>
                                        <input class="form-control form-control-lg"
                                               type="text"
                                               asp-for="@Model.BrandName" />
                                    </div>

                                    <div class="form-group">
                                        <label>Trạng thái hiện tại của thương hiệu:</label>
                                        <input class="form-control form-control-lg"
                                               type="text"
                                               value="@(Model.IsBrandActive ? "Đang kích hoạt" : "Không kích hoạt")" />
                                    </div>

                                    <div class="form-group mb-0 d-flex justify-content-center">
                                        <a href="/Device/@Model.BrandId" class="btn btn-primary col-lg-4 col-sm-12">Trở Về</a>
                                    </div>
                                </li>
                                <li class="weight-500 col-md-1"></li>
                            </ul>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<ul class="notification-list"></ul>

@section Scripts {

    @if (ViewBag.Error != null)
    {
        <script>
            $(function () {
                toastr.error('@ViewBag.Error', 'Error Occurred!')
            });
        </script>
    }

    @if (ViewBag.Success != null)
    {
        <script>
            $(function () {
                toastr.success('@ViewBag.Success', 'Successful!')
            });
        </script>
    }
}