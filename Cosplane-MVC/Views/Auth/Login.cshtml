@using Cosplane_API_ViewModel.Account
@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
@model BasicLoginViewModel

<section class="h-100 gradient-form" style="background-color:#3D8BF2">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-xl-10">
                <div class="card rounded-3 text-black">
                    <div class="row g-0">
                        <div class="col-lg-6">
                            <div class="card-body p-md-5 mx-md-4">

                                <div class="text-center">
                                    <img src="~/Brand//Logo-light.png"
                                         style="width: 185px;" alt="logo">
                                    <h4 class="mt-1 mb-5 pb-1">We are SnapPOS Team</h4>
                                </div>

                                <form asp-action="CheckLogin" asp-controller="Auth" method="post">
                                  

                                    <div data-mdb-input-init class="form-outline mb-4">
                                        <input type="text"
                                               class="form-control form-control-lg"
                                               placeholder="Tên đăng nhập"
                                               required
                                               asp-for="Username" />

                                        <label class="form-label" for="form2Example11">Tên Đăng Nhập</label>
                                    </div>

                                    <div data-mdb-input-init class="form-outline mb-4">
                                        <input type="password"
                                               class="form-control form-control-lg"
                                               placeholder="**********"
                                               required
                                               asp-for="Password" />

                                        <label class="form-label" for="form2Example22">Password</label>
                                    </div>

                                    <div class="text-center pt-1 mb-5 pb-1">
                                        <button type="submit" class="btn btn-primary btn-lg btn-block">Đăng Nhập</button>

                                       
                                    </div>

                                    

                                </form>

                            </div>
                        </div>
                        <div class="col-lg-6 d-flex align-items-center " >
                            <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                                <h4 class="mb-4 text-center">We are more than just a company</h4>
                                <img src="~/Brand/logo-bg.png"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<ul class="notification-list"></ul>

@section Scripts {
    @if (ViewBag.Error != null)
    {
        <script>
            $(function () {
                toastr.error('@ViewBag.Error', 'Error Occurred!');
            });
        </script>
    }
    @if (ViewBag.Success != null)
    {
        <script>
            $(function () {
                toastr.success('@ViewBag.Success', 'Successful!');
            });
        </script>
    }
}
