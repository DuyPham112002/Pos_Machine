@using Cosplane_API_ViewModel.Account


@model CreateFullAccountViewModel

<div class="min-height-200px">
    <div class="page-header background-blue ">
        <div class="row">
            <div class="col-md-6 col-sm-12">
                <div class=" light-text">
                    <h4 class="light-text">Quản Lý Quản Trị Viên</h4>
                </div>
                <nav aria-label="breadcrumb" role="navigation">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item ">
                            <a class="light-text" href="/">Trang Chủ</a>
                        </li>
                        <li class="breadcrumb-item active light-text" aria-current="page">
                            Tạo Quản Trị Viên Mới
                        </li>
                    </ol>
                </nav>
            </div>

        </div>


    </div>
    <div class="pd-20 card-box mb-30">
        <div class="clearfix">
            <div class="pull-left">
                <h4 class="dark-text h4">Tạo Quản Trị Viên Mới</h4>
                <p class="mb-30">Tạo tài khoản mới của Admin</p>
            </div>

        </div>
        <form asp-action="CreateEmployee" asp-controller="Admin" method="post">
            <div class="form-group row">
                <label class="col-sm-12 col-md-2 col-form-label">Tài Khoản</label>
                <div class="col-sm-12 col-md-12">
                    <input asp-for="Account.Username"
                           class="form-control"
                           type="text"
                           placeholder="Tài Khoản"
                           required
                           min="2" />
                </div>
            </div>


            <div class="form-group row">
                <label class="col-sm-12 col-md-2 col-form-label">Mật Khẩu</label>
                <div class="col-sm-12 col-md-12">
                    <input class="form-control"
                           placeholder="Mật Khẩu"
                           type="password"
                           required
                           min="8"
                           asp-for="Account.Password" />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-12 col-md-2 col-form-label">Họ và Tên</label>
                <div class="col-sm-12 col-md-12">
                    <input class="form-control"
                           placeholder="Họ và Tên"
                           type="text"
                           required
                           min="8"
                           asp-for="Employee.Fullname" />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-12 col-md-2 col-form-label">Số Điện Thoại</label>
                <div class="col-sm-12 col-md-12">
                    <input class="form-control OnlyNumber"
                           placeholder="SĐT"
                           type="text"
                           required
                           min="8"
                           asp-for="Employee.Phone" />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-12 col-md-2 col-form-label">Email</label>
                <div class="col-sm-12 col-md-12">
                    <input class="form-control"
                           placeholder="Email"
                           type="email"
                           required
                           min="8"
                           asp-for="Employee.Email" />
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-12 col-md-2 col-form-label">Địa Chỉ</label>
                <div class="col-sm-12 col-md-12">
                    <input class="form-control"
                           placeholder="Địa Chỉ"
                           type="text"
                           required
                           min="8"
                           asp-for="Employee.Address" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2"></div>
                <button type="submit" class="btn btn-success col-lg-2 col-sm-12 offset-lg-2">Tạo</button>
                <a href="/Home/Index" class="btn btn-primary col-lg-2 col-sm-12 offset-lg-1">Trở về</a>
                <div class="col-2"></div>
            </div>
        </form>

    </div>
</div>
<ul class="notification-list"></ul>

@section Scripts {
    @if (ViewBag.Error != null)
    {
        <script>
            $(function () {
                toastr.error('@ViewBag.Error', 'Error Occurred!')
            });
        </script>

    }
    @if (ViewBag.Success != null)
    {
        <script>
            $(function () {
                toastr.success('@ViewBag.Success', 'Successful!')
            });
        </script>

    }
}
