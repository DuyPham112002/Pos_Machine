@using Client_ViewModel.Shift

@{
    Layout = "~/Views/Shared/_EmptyLayout.cshtml";
}

@model CreateShiftViewModel

<section class="vh-100" style="background-color:#3D8BF2">
    <div class="container py-5 h-100">
        <div class="row justify-content-center align-items-center h-100 ">
            <div class="col-12 col-xl-10">
                <div class="card" style="border-radius: 1rem; border-style: none;">
                    <div class="row g-0">
                        <!-- Image Column -->
                        <div class="col-12 col-md-6 col-lg-5 d-none d-md-block">
                            <img src="~/Brand/logo-blue.png"
                                 alt="login form" class="img-fluid w-100 h-100" style="border-radius: 1rem 0 0 1rem; object-fit: cover;" />
                        </div>

                        <!-- Form Column -->
                        <div class="col-12 col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">
                                <form asp-action="CreateShift" asp-controller="Shift" method="Post">

                                    <h3 class="fw-normal mb-3 pb-3 text-center" style="letter-spacing: 1px;">Bắt Đầu Ca Làm Việc Mới</h3>

                                    <div class="form-outline mb-4">
                                        <label class="form-label"><strong>Nhập số tiền đang có trong két</strong></label>
                                        <input asp-for="BeginAmount" type="text" class="form-control vndInput" required />
                                    </div>

                            <div class="pt-1 mb-4">
                                <div class="text-center"> <button type="submit" class="btn btn-success" style="width: 100%;"> Bắt Đầu Ca </button></div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<ul id="notification-list"></ul>

<ul class="notifications"></ul>
@section Scripts {
    @if (ViewBag.Success != null)
    {
        <script>
            $(function () {
                toastSuccess('@Html.Raw(ViewBag.Success)');
            });
        </script>
    }
    @if (ViewBag.Error != null)
    {
        <script>
            $(function () {
                toastError('@Html.Raw(ViewBag.Error)');
            });
        </script>
    }
}