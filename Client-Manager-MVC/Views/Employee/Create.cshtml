@using Client_ViewModel.Employee


@model CreateEmployeeViewModel

<style>
    .wizard-custom,
    .wizard-custom .nav-tabs,
    .wizard-custom .nav-tabs .nav-item {
        position: relative;
    }

        .wizard-custom .nav-tabs:after {
            content: "";
            width: 80%;
            border-bottom: solid 2px #ccc;
            position: absolute;
            margin-left: auto;
            margin-right: auto;
            top: 38%;
            z-index: -1;
        }

        .wizard-custom .nav-tabs .nav-item .nav-link {
            width: 70px;
            height: 70px;
            margin-bottom: 6%;
            background: white;
            border: 2px solid #ccc;
            color: #ccc;
            z-index: 10;
        }

            .wizard-custom .nav-tabs .nav-item .nav-link:hover {
                color: #333;
                border: 2px solid #333;
            }

            .wizard-custom .nav-tabs .nav-item .nav-link.active {
                background: #fff;
                border: 2px solid #0dcaf0;
                color: #0dcaf0;
            }

            .wizard-custom .nav-tabs .nav-item .nav-link:after {
                content: " ";
                position: absolute;
                left: 50%;
                transform: translate(-50%);
                opacity: 0;
                margin: 0 auto;
                bottom: 0px;
                border: 5px solid transparent;
                border-bottom-color: #0dcaf0;
                transition: 0.1s ease-in-out;
            }

    .nav-tabs .nav-item .nav-link.active:after {
        content: " ";
        position: absolute;
        left: 50%;
        transform: translate(-50%);
        opacity: 1;
        margin: 0 auto;
        bottom: 0px;
        border: 10px solid transparent;
        border-bottom-color: #0dcaf0;
    }

    .wizard-custom .nav-tabs .nav-item .nav-link svg {
        font-size: 25px;
    }

</style>

<div class="main-container">
    <div class="pd-ltr-20 xs-pd-20-10">
        <div class="min-height-200px">
            <div class="page-header">
                <div class="row">
                    <div class="col-md-6 col-sm-12">
                        <div class="title">
                            <h4>Nhân Viên</h4>
                        </div>
                        <nav aria-label="breadcrumb" role="navigation">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a href="Home/Index">Trang Chủ</a>
                                </li>
                                <li class="breadcrumb-item active" aria-current="page">
                                    Tạo Mới
                                </li>
                            </ol>
                        </nav>
                    </div>
                    <div class="col-md-6 col-sm-12 text-right">
                    </div>
                </div>
            </div>

            <div class="pd-20 card-box mb-30">
                <div class="clearfix">
                    <p class="mb-30">Ngày Tạo: @DateTime.Now.ToString("dd/MM/yyyy")</p>
                </div>
                <form asp-action="Create" asp-controller="Employee" method="post" enctype="multipart/form-data">
                    <div class="container">
                        <div class="wizard-custom my-5">
                            <ul class="nav nav-tabs justify-content-center" id="myTab" role="tablist">
                                <li class="nav-item flex-fill" role="presentation" data-bs-toggle="tooltip" data-bs-placement="top" title="Thông Tin Các Nhân">
                                    <a class="nav-link active rounded-circle mx-auto d-flex align-items-center justify-content-center" href="#step3" id="step3-tab" data-bs-toggle="tab" role="tab" aria-controls="step3" aria-selected="true" title="Step 3" style="pointer-events: none;">
                                        <i class="fas fa-solid fa-user"></i>
                                    </a>
                                </li>
                                <li class="nav-item flex-fill" role="presentation" data-bs-toggle="tooltip" data-bs-placement="top" title="Tài Khoản Đăng Nhập">
                                    <a class="nav-link rounded-circle mx-auto d-flex align-items-center justify-content-center" href="#step4" id="step4-tab" data-bs-toggle="tab" role="tab" aria-controls="step4" aria-selected="false" title="Step 4" style="pointer-events: none;">
                                        <i class="fas fa-solid fa-lock"></i>
                                    </a>
                                </li>
                            </ul>
                            <div class="tab-content" id="myTabContent">
                                <div class="step3-tab tab-pane fade show active" role="tabpanel" id="step3" aria-labelledby="step3-tab">
                                    <br />
                                    <h5>Thông Tin Cá Nhân</h5>
                                    <br />
                                    <!-- Step 3 -->
                                    <section class="personal-info">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label>Họ & Tên* :</label>
                                                    <input type="text" class="form-control full-name" asp-for="Fullname" maxlength="50" />
                                                    <span asp-validation-for="Fullname"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label>Giới Tính* :</label>
                                                    <select asp-for="Gender" class="gender custom-select form-control">
                                                        <option value="0" data-display="Select">Chọn Giới Tính</option>
                                                        <option value="1">Nam</option>
                                                        <option value="2">Nữ</option>
                                                    </select>
                                                    <span asp-validation-for="Gender"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label>Số Điện Thoại* :</label>
                                                    <input type="text" class="form-control phone no-spinner OnlyNumber" asp-for="Phone" maxlength="15" oninput="validatePhoneLength(this)" />
                                                    <span asp-validation-for="Phone"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label>Email* :</label>
                                                    <input type="text" class="form-control email" asp-for="Email" maxlength="50" />
                                                    <span asp-validation-for="Email"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label>Địa Chỉ* :</label>
                                                    <input type="text" class="form-control address" asp-for="Address" maxlength="100" />
                                                    <span asp-validation-for="Address"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label>Ngày Sinh :</label>
                                                    <input type="date" class="form-control dateOfBirth" asp-for="DateOfBirth" onfocus="this.showPicker();" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label>Ghi Chú :</label>
                                                    <textarea asp-for="Bio" rows="2" class="form-control" maxlength="500"></textarea>
                                                </div>
                                            </div>
                                        </div>
                                    </section>

                                    <div class="d-flex justify-content-end">
                                        <a class="btn btn-primary next" style="color: #FFFFFF;">Tiếp Theo <i class="fas fa-angle-right"></i></a>
                                    </div>
                                </div>
                                <div class="tab-pane fade step4-tab" role="tabpanel" id="step4" aria-labelledby="step4tab">
                                    <br />
                                    <h5>Tài Khoản Đăng Nhập</h5>
                                    <br />
                                    <!-- Step 4 -->
                                    <section>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <label>Tên Đăng Nhập* :</label>
                                                    <input type="text" class="form-control username" asp-for="Account.Username" maxlength="50" />
                                                    <span asp-validation-for="Account.Username"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label>Mật Khẩu* :</label>
                                                    <input type="password" class="form-control password" asp-for="Account.Password" maxlength="30" value="@(Model != null && Model.Account != null ? Model.Account.Password : "")" />
                                                    <span asp-validation-for="Account.Password"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label>Xác Nhận Mật Khẩu* :</label>
                                                    <input type="password" class="form-control confirm" asp-for="Account.ConfirmPassword" maxlength="30" value="@(Model != null && Model.Account != null ? Model.Account.ConfirmPassword : "")" />
                                                    <span asp-validation-for="Account.ConfirmPassword"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </section>

                                    <div class="d-flex justify-content-end">
                                        <a class="btn btn-primary previous" style="margin-right: 20px;color: #FFFFFF;"><i class="fas fa-angle-left"></i> Trở về </a>
                                        <button class="btn btn-success" type="submit">Tạo Mới</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!--Notify-->
    <ul class="notifications"></ul>
    <ul class="notification-list"></ul>

    @section Scripts {
        <script src="vendors/scripts/steps-setting.js"></script>
        @if (ViewBag.Success != null)
        {
            <script>
                $(function () {
                    toastSuccess('@Html.Raw(ViewBag.Success)');
                });
            </script>
        }

    @if (ViewBag.Error != null)
    {
        <script>
            $(function () {
                toastError('@Html.Raw(ViewBag.Error)');
            });
        </script>
    }
}
